<h1>users edit</h1>

<h2>User info</h2>
<%= form_for(@user) do |f| %>
    <div>
        <label>Name</label>
        <%= f.text_field :name, id:"inputEmail", placeholder:"名前"%>
    </div>
    <div>
        <label>Image</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
    </div>
    <div>
        <label>Introduction</label>
        <%= f.text_area :introduction, placeholder:"自己紹介 最大５０文字"%>
        <%= f.submit "Update User"%>
    </div>
<% end %>