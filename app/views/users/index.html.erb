<div class="container">
  <div class="row">

        <div class='col-xs-3'>
          <h1>users index</h1>
          <h1>User info</h1>
                <%= attachment_image_tag current_user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpeg" ,size:'150x150'%>
            <table class="table">
                <tr>
                    <td><p>name</p></td>
                    <td><p><%= current_user.name%></p></td>
                </tr>
                <tr>
                    <td><p>introduction</p></td>
                    <td><p><%= current_user.introduction%></p></td>
                </tr>
            </table>

            <p><%= link_to "edit", edit_user_path(current_user) %></p><br>

            <h2>New book</h2>
            <%= form_for(@book) do |f| %>
              <% if @book.errors.any? %>
                <div id="error_explanation">
                  <h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
                  <ul>
                  <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
              <h5>Title</h5>
                <div class="form-group">
                    <%= f.text_field :title %>
                </div>
              <h5>Opinion</h5>
              <div class="from-group">
                <%= f.text_area :body %><br>
              </div>
                <%= f.submit 'Create Book' %>
            <% end %>
        </div>

        <div class='col-xs-9'>
          <h2>User</h2>
            <table class="table" border="1">
                <thead>
                   <tr>
                      <th>image</th>
                      <th>name</th>
                      <th></th>
                   </tr>
                </thead>
                <tbody>
                    <% @users.each do |user| %>
                      <tr>
                        <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: 'no_image.jpeg' , size:'50x50' %></td>
                        <td><%= user.name %></td>
                        <td><%= link_to 'Show', user_path(user) %></td>
                      </tr>
                    <% end %>
                </tbody>
            </table>
        </div>

  </div>
</div>