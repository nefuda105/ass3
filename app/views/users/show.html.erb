<div class="container">
  <div class="row">
                <div class='col-xs-3'>
                <h1>User info</h1>
                        <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpeg" ,size:'150x150'%>
                    <table class="table">
                        <tr>
                            <td><p>name</p></td>
                            <td><p><%= @user.name%></p></td>
                        </tr>
                        <tr>
                            <td><p>introduction</p></td>
                            <td><p><%= @user.introduction%></p></td>
                        </tr>
                    </table>

                    <% if @user.id == current_user.id %>
                      <%= link_to 'edit', edit_user_path(@user.id) %>
                      <% end %>

                    <h2>New book</h2>
                    <%= form_for(@book) do |f| %>
                    <% if @book.errors.any? %>
                      <div id="error_explanation">
                        <h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
                        <ul>
                        <% @book.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                        </ul>
                      </div>
                    <% end %>
                    
                    <h5>Title</h5>
                    <%= f.text_field :title %>

                    <h5>Opinion</h5>
                    <%= f.text_area :body %>

                    <%= f.submit 'Create Book' %>

                <% end %>
                </div>

                <div class='col-xs-9'>
                <h2>Books</h2>
                    <table class="table" border="1">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Title</th>
                                <th>Opinion</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @user.books.each do |book| %>
                              <tr>
                                <td><%= link_to user_path(book.user.id) do %>
                                    <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: 'no_image.jpeg' , size:'50x50' %>
                                        <% end %>
                                    </td>
                                <td><%= link_to book.title,book_path(book) %></td>
                                <td><%= book.body %></td>
                              </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>

  </div>
</div>